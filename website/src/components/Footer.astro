---
const docLinks = [
  { label: 'Starter Guide', href: '/docs#starter' },
  { label: 'Language Spec', href: '/docs#spec' },
  { label: 'Built-in Reference', href: '/docs#builtins' },
  { label: 'CLI Commands', href: '/docs#cli' }
];

const resourceLinks = [
  { label: 'GitHub Repository', href: 'https://github.com' },
  { label: 'Go Ecosystem', href: 'https://go.dev' },
  { label: 'TypeScript Docs', href: 'https://www.typescriptlang.org/docs/' },
  { label: 'Changelog', href: '#' }
];
---

<footer class="flex flex-col gap-10 px-20 pt-16 pb-10 bg-[var(--color-bg-card-header)]">
  <!-- Top Section -->
  <div class="flex justify-between w-full">
    <!-- Brand -->
    <div class="flex flex-col gap-4 w-[300px]">
      <div class="flex items-center gap-2">
        <div class="w-7 h-7 rounded-[5px] bg-[var(--color-primary)]"></div>
        <span class="font-mono text-lg font-semibold text-[var(--color-text-white)]">goTS</span>
      </div>
      <p class="text-[13px] text-[var(--color-text-muted)] leading-relaxed">
        A statically-typed TypeScript subset that compiles to native Go binaries.
      </p>
    </div>

    <!-- Links -->
    <div class="flex gap-16">
      <div class="flex flex-col gap-4">
        <span class="text-xs font-semibold text-[var(--color-text-white)] uppercase tracking-wide">Docs</span>
        {docLinks.map(({ label, href }) => (
          <a href={href} class="text-[13px] text-[var(--color-text-gray)] hover:text-[var(--color-text-white)] transition-colors">{label}</a>
        ))}
      </div>
      <div class="flex flex-col gap-4">
        <span class="text-xs font-semibold text-[var(--color-text-white)] uppercase tracking-wide">Resources</span>
        {resourceLinks.map(({ label, href }) => (
          <a href={href} target={href.startsWith('http') ? '_blank' : undefined} rel={href.startsWith('http') ? 'noopener noreferrer' : undefined} class="text-[13px] text-[var(--color-text-gray)] hover:text-[var(--color-text-white)] transition-colors">{label}</a>
        ))}
      </div>
    </div>
  </div>

  <!-- Divider -->
  <div class="w-full h-px bg-[var(--color-border)]"></div>

  <!-- Bottom Section -->
  <div class="flex justify-between items-center w-full">
    <span class="text-[13px] text-[var(--color-text-muted)]">&copy; 2026 goTS Project. MIT License.</span>
    <div class="flex gap-6">
      <a href="#" class="text-[13px] text-[var(--color-text-gray)] hover:text-[var(--color-text-white)] transition-colors">Privacy</a>
      <a href="#" class="text-[13px] text-[var(--color-text-gray)] hover:text-[var(--color-text-white)] transition-colors">Terms</a>
    </div>
  </div>
</footer>
