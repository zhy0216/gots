---
const cliCommands = [
  {
    label: 'Install',
    command: 'go install github.com/gots/gots@latest'
  },
  {
    label: 'Build & Run',
    command: 'gots run program.gts'
  },
  {
    label: 'Compile to Binary',
    command: 'gots build program.gts -o app'
  }
];
---

<section id="getting-started" class="flex flex-col items-center gap-10 px-20 py-20 bg-[var(--color-bg-card-header)]">
  <!-- Header -->
  <div class="flex flex-col items-center gap-3">
    <h2 class="text-[42px] font-bold text-[var(--color-text-white)]">Get Started in Seconds</h2>
    <p class="text-lg text-[var(--color-text-gray)]">
      Install GoTS and start writing type-safe code that compiles to Go
    </p>
  </div>

  <!-- CLI Cards -->
  <div class="flex justify-center gap-6 w-full">
    {cliCommands.map(({ label, command }) => (
      <div class="w-[380px] p-6 rounded-xl bg-[var(--color-bg-card)] border border-[var(--color-border)]">
        <div class="flex flex-col gap-3">
          <span class="text-xs font-semibold text-[var(--color-text-muted)] uppercase tracking-wide">{label}</span>
          <div class="flex items-center gap-3 px-4 py-3 rounded-lg bg-[var(--color-bg-dark)]">
            <span class="font-mono text-sm text-[var(--color-primary)]">$</span>
            <code class="font-mono text-sm text-[var(--color-text-gray-light)]">{command}</code>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
