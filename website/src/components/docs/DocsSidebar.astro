---
const navSections = [
  {
    title: 'GETTING STARTED',
    items: [
      { label: 'Language Specification', href: '#spec', active: true },
      { label: 'Starter Guide', href: '#starter' },
      { label: 'Built-in Reference', href: '#builtins' }
    ]
  },
  {
    title: 'CORE CONCEPTS',
    items: [
      { label: 'Types', href: '#types' },
      { label: 'Variables & Constants', href: '#variables' },
      { label: 'Expressions', href: '#expressions' },
      { label: 'Statements', href: '#statements' }
    ]
  },
  {
    title: 'ADVANCED',
    items: [
      { label: 'Functions & Closures', href: '#functions' },
      { label: 'Classes & Inheritance', href: '#classes' }
    ]
  }
];
---

<aside class="w-[280px] h-[calc(100vh-72px)] bg-[var(--color-bg-card-header)] sticky top-[72px] overflow-y-auto">
  <div class="flex flex-col gap-6 p-6">
    <h3 class="text-sm font-semibold text-[var(--color-text-white)]">Documentation</h3>

    {navSections.map(section => (
      <nav class="flex flex-col gap-2">
        <span class="text-[11px] font-semibold text-[var(--color-text-muted)] tracking-wider">
          {section.title}
        </span>
        <div class="flex flex-col gap-2">
          {section.items.map(item => (
            <a
              href={item.href}
              class={`px-3 py-2 rounded-md text-sm transition-colors ${
                item.active
                  ? 'bg-[var(--color-primary-muted)] text-[var(--color-primary)] font-medium'
                  : 'text-[var(--color-text-gray-light)] hover:text-[var(--color-text-white)]'
              }`}
            >
              {item.label}
            </a>
          ))}
        </div>
      </nav>
    ))}
  </div>
</aside>
