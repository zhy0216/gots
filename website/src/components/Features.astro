---
import { Zap, Type, Package } from 'lucide-astro';

const features = [
  {
    icon: Zap,
    title: 'Native Performance',
    description: 'Compiles directly to native Go binaries. No runtime overhead, no VM, just pure compiled performance.'
  },
  {
    icon: Type,
    title: 'Static Type Safety',
    description: 'Full type checking at compile time. Catch errors before runtime with TypeScript-like type annotations.'
  },
  {
    icon: Package,
    title: 'Go Ecosystem',
    description: "Full access to Go's standard library and package ecosystem. Use any Go package seamlessly in your code."
  }
];
---

<section class="flex flex-col items-center gap-12 px-20 py-20">
  <!-- Header -->
  <div class="flex flex-col items-center gap-3">
    <h2 class="text-[42px] font-bold text-[var(--color-text-white)]">Why goTS?</h2>
    <p class="text-lg text-[var(--color-text-gray)] text-center max-w-[600px]">
      The best of both worlds: TypeScript ergonomics meets Go performance
    </p>
  </div>

  <!-- Features Grid -->
  <div class="flex justify-center gap-5 w-full">
    {features.map(({ icon: Icon, title, description }) => (
      <div class="w-[360px] p-8 rounded-xl bg-[var(--color-bg-card)] border border-[var(--color-border)]">
        <div class="flex flex-col gap-4">
          <div class="flex items-center justify-center w-12 h-12 rounded-[10px] bg-[var(--color-primary-muted)]">
            <Icon class="w-6 h-6 text-[var(--color-primary)]" />
          </div>
          <h3 class="text-xl font-semibold text-[var(--color-text-white)]">{title}</h3>
          <p class="text-sm text-[var(--color-text-gray)] leading-relaxed">{description}</p>
        </div>
      </div>
    ))}
  </div>
</section>
