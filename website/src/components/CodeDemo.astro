---
import { ArrowRight } from 'lucide-astro';

const gtsCode = [
  'function factorial(n: int): int {',
  '    if (n <= 1) { return 1 }',
  '    return n * factorial(n - 1)',
  '}',
  '',
  'println(factorial(10))'
];

const goCode = [
  'package main',
  '',
  'func factorial(n int) int {',
  '    if n <= 1 { return 1 }',
  '    return n * factorial(n - 1)',
  '}',
  '',
  'func main() {',
  '    fmt.Println(factorial(10))',
  '}'
];
---

<section class="flex items-center justify-center gap-6 px-20 pb-20">
  <!-- GTS Code Block -->
  <div class="w-[560px] rounded-xl bg-[var(--color-bg-card)] border border-[var(--color-border)] overflow-hidden">
    <!-- Header -->
    <div class="flex items-center justify-between px-4 py-3 bg-[var(--color-bg-card-header)]">
      <span class="font-mono text-xs font-medium text-[var(--color-text-muted)]">example.gts</span>
      <div class="px-2 py-1 rounded bg-[var(--color-primary-muted)]">
        <span class="font-mono text-[10px] font-semibold text-[var(--color-primary)]">GoTS</span>
      </div>
    </div>
    <!-- Body -->
    <div class="flex flex-col gap-1 p-5">
      {gtsCode.map((line) => (
        <code class="font-mono text-[13px] text-[var(--color-text-gray-light)] leading-relaxed whitespace-pre">{line || '\u00A0'}</code>
      ))}
    </div>
  </div>

  <!-- Arrow -->
  <div class="flex items-center justify-center w-10 h-10 rounded-full bg-[#1A1A1D]">
    <ArrowRight class="w-5 h-5 text-[var(--color-primary)]" />
  </div>

  <!-- Go Code Block -->
  <div class="w-[560px] rounded-xl bg-[var(--color-bg-card)] border border-[var(--color-border)] overflow-hidden">
    <!-- Header -->
    <div class="flex items-center justify-between px-4 py-3 bg-[var(--color-bg-card-header)]">
      <span class="font-mono text-xs font-medium text-[var(--color-text-muted)]">example.go</span>
      <div class="px-2 py-1 rounded bg-[var(--color-go-muted)]">
        <span class="font-mono text-[10px] font-semibold text-[var(--color-go)]">Go</span>
      </div>
    </div>
    <!-- Body -->
    <div class="flex flex-col gap-1 p-5">
      {goCode.map((line) => (
        <code class="font-mono text-[13px] text-[var(--color-text-gray-light)] leading-relaxed whitespace-pre">{line || '\u00A0'}</code>
      ))}
    </div>
  </div>
</section>
