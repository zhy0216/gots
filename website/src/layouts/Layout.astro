---
interface Props {
  title?: string;
}

const { title = "GoTS - TypeScript-like language that compiles to Go" } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content="GoTS is a TypeScript-like language that compiles to native Go binaries. Get the developer experience of TypeScript with the performance of Go." />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=DM+Mono:wght@400;500&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="h-full bg-[var(--color-bg-dark)] font-sans antialiased">
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/globals.css";
</style>
